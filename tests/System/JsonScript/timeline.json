{
	"description": "Test Modern Timeline",
	"setup": [
		{
			"page": "News date",
			"namespace": "SMW_NS_PROPERTY",
			"contents": "[[Has type::Date]]"
		},
		{
			"page": "First news event",
			"contents": "[[News date::August 1, 2019]]"
		},
		{
			"page": "Second news event",
			"contents": "[[News date::August 2, 2019]]"
		},
		{
			"page": "Page without date",
			"contents": "No date here"
		},
		{
			"page": "SMWDoc",
			"contents": "{{#smwdoc:moderntimeline}}"
		},
		{
			"page": "Query page",
			"contents": "{{ #ask: [[News date::+]] | format=moderntimeline | ?News date }}"
		},
		{
			"page": "Query with modified height",
			"contents": "{{ #ask: [[News date::+]] | format=moderntimeline | ?News date | height=1337 }}"
		}
	],
	"tests": [
		{
			"about": "Only pages with dates are shown",
			"type": "parser",
			"subject": "Query page",
			"assert-output": {
				"include-head-items": true,
				"to-contain": [
					"First news event",
					"Second news event"
				],
				"not-contain": [
					"No date here"
				]
			}
		},
		{
			"about": "Width and height parameters",
			"type": "parser",
			"subject": "Query with modified height",
			"assert-output": {
				"to-contain": [
					"width: 100%",
					"height: 1337px"
				]
			}
		},
		{
			"about": "All parameters have a message",
			"type": "parser",
			"subject": "SMWDoc",
			"assert-output": {
				"to-contain": [
					"Background"
				],
				"not-contain": [
					"modern-timeline-"
				]
			}
		}
	],
	"settings": {
		"wgContLang": "en",
		"wgLang": "en",
		"smwgNamespacesWithSemanticLinks": {
			"NS_MAIN": true,
			"SMW_NS_PROPERTY": true
		}
	},
	"meta": {
		"version": "2",
		"is-incomplete": false,
		"debug": false
	}
}